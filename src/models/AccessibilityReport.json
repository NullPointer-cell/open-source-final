{
  "name": "AccessibilityReport",
  "type": "object",
  "properties": {
    "place_id": {
      "type": "string",
      "description": "Unique identifier for the place (OSM ID or coordinates)"
    },
    "place_name": {
      "type": "string",
      "description": "Name of the place"
    },
    "latitude": {
      "type": "number",
      "description": "Latitude coordinate"
    },
    "longitude": {
      "type": "number",
      "description": "Longitude coordinate"
    },
    "address": {
      "type": "string",
      "description": "Full address of the place"
    },
    "has_ramp": {
      "type": "string",
      "enum": [
        "yes",
        "no",
        "unknown"
      ],
      "default": "unknown",
      "description": "Wheelchair ramp availability"
    },
    "has_lift": {
      "type": "string",
      "enum": [
        "yes",
        "no",
        "unknown"
      ],
      "default": "unknown",
      "description": "Elevator/lift availability"
    },
    "has_accessible_toilet": {
      "type": "string",
      "enum": [
        "yes",
        "no",
        "unknown"
      ],
      "default": "unknown",
      "description": "Accessible toilet availability"
    },
    "has_accessible_parking": {
      "type": "string",
      "enum": [
        "yes",
        "no",
        "unknown"
      ],
      "default": "unknown",
      "description": "Accessible parking availability"
    },
    "has_accessible_entrance": {
      "type": "string",
      "enum": [
        "yes",
        "no",
        "unknown"
      ],
      "default": "unknown",
      "description": "Accessible entrance availability"
    },
    "overall_rating": {
      "type": "string",
      "enum": [
        "accessible",
        "partially_accessible",
        "not_accessible",
        "unknown"
      ],
      "default": "unknown",
      "description": "Overall accessibility rating"
    },
    "comment": {
      "type": "string",
      "description": "Additional comments or details"
    },
    "photo_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs of uploaded photos"
    },
    "verified": {
      "type": "boolean",
      "default": false,
      "description": "Whether this report has been verified by multiple users"
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 50,
      "description": "Confidence score based on number of reports and verifications"
    }
  },
  "required": [
    "place_id",
    "place_name",
    "latitude",
    "longitude"
  ]
}